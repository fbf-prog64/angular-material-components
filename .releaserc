{
  "branches": [
    { "name": "main" },
    { "name": "dev", "channel": "next", "prerelease": "next" },
    { "name": "nightly", "channel": "nightly", "prerelease": "nightly" }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/exec", {
      "prepareCmd": "./scripts/update-versions.sh ${nextRelease.version}",
      "publishCmd": "./scripts/publish-components.sh ${nextRelease.version}"
    }],
    ["@semantic-release/github", {
      "successComment": false
    }],
    ["@semantic-release/git", {
      "assets": [
        "package.json",
        "projects/*/package.json"
      ],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }]
  ]
}
